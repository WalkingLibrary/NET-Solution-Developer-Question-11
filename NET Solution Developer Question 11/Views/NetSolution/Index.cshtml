    min-height: 150px;
    min-width: 300px;
    height: 100px;
    width: calc(100% - 60px);
    display:flex;
    align-items: center;
    justify-content: center;
    flex-flow: row;
    margin: 30px;
    padding:10px;
    border-radius: 30px;
    background-color: grey;
}

